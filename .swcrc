{
  "$schema": "http://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "paths": {
      "~/*": ["./src/*"]
    },
    "target": "es2022"
  },
  "module": {
    "type": "es6",
    "noInterop": true
  }
}
